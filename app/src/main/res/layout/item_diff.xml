<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.r.immoscoutpuller.model.ImmoItem"/>

        <variable
            name="viewModel"
            type="com.r.immoscoutpuller.screens.diff.DiffItemViewModel" />

        <variable
            name="clickListener"
            type="com.roman.basearch.view.list.ItemClickListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:onClick="@{() -> clickListener.onItemClicked(viewModel.item)}">

        <TextView
            android:id="@+id/txt_date"
            style="@style/StandardHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@{viewModel.creationDate}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Created abc" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>